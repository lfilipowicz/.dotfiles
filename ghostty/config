# save all files - ESC :w Enter
keybind = super+shift+s=text:\x1b\x3a\x77\x61\x0a

# save file - ESC :w Enter
keybind = super+s=text:\x1b\x3a\x77\x0a

# find project
keybind = super+f=text:\x02\x66

# Toggle the zoom state of the current tmux pane
keybind = super+z=text:\x02\x7a

#Split the current pane into two, left and right
keybind = super+shift+n=text:\x02\x25

#Split the current pane into two, top and bottom. (ctrl+b+")
keybind = super+n=text:\x02\x22

#Select a tmux session for the attached client interactively (ctrl+b+s)
keybind = super+k=text:\x02\x73\x0a

#kill pane <C-b> + x
keybind = super+w=text:\x02\x78

#create tmux new pane
keybind = super+t=text:\x02\x63

#Open lazygit
keybind = super+g=text:\x02\x67

#rename session <C-b> + r
keybind = super+r=text:\x02\x240

#rename pane <C-b> + r
keybind = super+,=text:\x02\x2c

